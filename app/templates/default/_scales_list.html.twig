{#
Scales list template

parameters:
    - pagination: Pagination with items list
#}
{% if pagination is defined and pagination.items|length %}
    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>

    <table class="table table-striped table-bordered table--scales">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'label.scale_name'|trans, 'scale.name') }}</th>
            <th>{{ 'label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for scale in pagination.items %}
            <tr>
                <td>{{ scale.name|trans }}</td>
                <td>
                    <a href="{{ url('scale_show', {slug: scale.slug}) }}" title="{{ 'action.view'|trans }} {{ scale.name|trans }}">
                        <i class="fa-solid fa-eye" aria-label="{{ 'action.view'|trans }} {{ scale.name|trans }}"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>


{% else %}
    <p>
        {{ 'message.empty_list'|trans }}
    </p>
{% endif %}