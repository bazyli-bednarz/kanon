{#
Piece list template

parameters:
    - pagination: Pagination with items list
#}
{% if pagination is defined and pagination.items|length %}
    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'label.piece_name'|trans, 'piece.name') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'label.piece_year'|trans, 'piece.year') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'label.piece_description'|trans, 'piece.description') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'label.piece_link'|trans, 'piece.link') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'label.composer'|trans, 'composer.name') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'label.period'|trans, 'period.name') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'label.scale'|trans, 'scale.name') }}</th>
            <th>{{ 'label.tags'|trans }}</th>
            <th>{{ 'label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for piece in pagination.items %}
            <tr>
                <td>{{ piece.name }}</td>
                <td>{{ piece.year }}</td>
                <td>{{ piece.description }}</td>
                <td><a href="https://youtu.be/{{ piece.link }}" target="_blank">https://youtu.be/{{ piece.link }}</a>
                </td>
                <td>
                    <a href="{{ url('composer_show', {slug: piece.composer.slug}) }}">{{ piece.composer.name }} {{ piece.composer.lastName }}</a>
                </td>
                <td>
                    <a href="{{ url('period_show', {slug: piece.composer.period.slug}) }}">{{ piece.composer.period.name|trans }}</a>
                </td>
                <td><a href="{{ url('scale_show', {slug: piece.scale.slug}) }}">{{ piece.scale.name|trans }}</a></td>
                <td>
                    {% if piece.tags is defined and piece.tags|length %}
                        {% for tag in piece.tags %}
                        <a href="{{ url('piece_index', {'filters_tag_slug': tag.slug}) }}">
                            {{ tag.name }}</a>{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    {% else %}
                        -
                    {% endif %}
                </td>

                <td>
                    <a href="{{ url('piece_show', {slug: piece.slug}) }}" title="{{ 'action.view'|trans }}: {{ piece.name|trans }}">
                        <i class="fa-solid fa-eye" aria-label="{{ 'action.view'|trans }}: {{ piece.name|trans }}"></i>
                    </a>
                    {% if is_granted('EDIT', piece) %}
                        <a href="{{ url('piece_edit', {slug: piece.slug}) }}" title="{{ 'action.edit'|trans }}: {{ piece.name|trans }}">
                            <i class="fa-solid fa-pen-to-square" aria-label="{{ 'action.edit'|trans }}: {{ piece.name|trans }}"></i>
                        </a>
                    {% endif %}
                    {% if is_granted('EDIT', piece) %}
                        <a href="{{ url('piece_delete', {slug: piece.slug}) }}" title="{{ 'action.delete'|trans }}: {{ piece.name|trans }}">
                            <i class="fa-solid fa-trash-can" aria-label="{{ 'action.delete'|trans }}: {{ piece.name|trans }}"></i>
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>


{% else %}
    <p>
        {{ 'message.empty_list'|trans }}
    </p>
{% endif %}