{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.period_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.period_list'|trans }}</h1>
{#    <a class="btn btn-primary btn-lg" href="{{ url('period_create') }}">{{ 'action.add_period'|trans }}</a>#}
    {% if pagination is defined and pagination.items|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'period.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.period_name'|trans, 'period.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.period_start_year'|trans, 'period.startYear') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.period_end_year'|trans, 'period.endYear') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.period_description'|trans, 'period.description') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'period.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'period.updatedAt') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for period in pagination.items %}
                <tr>
                    <td>{{ period.id }}</td>
                    <td>{{ period.name|trans }}</td>
                    <td>{{ period.startYear }}</td>
                    <td>{{ period.endYear }}</td>
                    <td>{{ period.description }}</td>
                    <td>{{ period.createdAt|format_datetime('short', 'short', locale=app.request.locale) }}</td>
                    <td>{{ period.updatedAt|format_datetime('short', 'short', locale=app.request.locale) }}</td>

                    <td>
                        <a href="{{ url('period_show', {slug: period.slug}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
{#                        <a href="{{ url('period_edit', {slug: period.slug}) }}" title="{{ 'action.edit'|trans }}">#}
{#                            {{ 'action.edit'|trans }}#}
{#                        </a>#}
{#                        <a href="{{ url('period_delete', {slug: period.slug}) }}" title="{{ 'action.delete'|trans }}">#}
{#                            {{ 'action.delete'|trans }}#}
{#                        </a>#}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>


    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}