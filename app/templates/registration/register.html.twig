{% extends 'base.html.twig' %}

{% block title %}{{ 'title.register'|trans }}{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {% if app.user %}
        <h1>
            {{ 'message.logged_in_as'|trans }} {{ app.user.name }}
        </h1>
        <p>{{ 'message.logged_in_description'|trans }}</p>
        <a href="{{ path('app_logout') }}">{{ 'action.logout'|trans }}</a>
    {% else %}
        <h1>{{ 'title.register'|trans }}</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.password) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button class="btn w-100 btn-primary" type="submit">
            {{ 'action.sign_up'|trans }}
        </button>
        {{ form_end(registrationForm) }}

        <p>
            {{ 'message.already_have_account'|trans }}
            <a href="{{ url('app_login') }}"> {{ 'action.login'|trans }}</a>
        </p>
    {% endif %}
    <div class="image-wrapper">
        <div class="image-wrapper__content">
            <img src="{{ asset('images/undraw_playful_cat.svg') }}" alt="{{ 'image.playful_cat'|trans }}"
                 class="image--medium">
            <p>{{ 'info.register'|trans }}</p>
        </div>
    </div>
{% endblock %}
