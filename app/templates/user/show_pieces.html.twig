{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.user_details'|trans({'%id%': user.id|default('')}) }}</h1>
    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>#{{ user.id }}</dd>
            <dt>{{ 'label.user_name'|trans }}</dt>
            <dd>{{ user.name }}</dd>
            <dt>{{ 'label.registered_at'|trans }}</dt>
            <dd>{{ user.createdAt|format_datetime('short', 'short', locale=app.request.locale) }}</dd>
            <dt>{{ 'label.actions'|trans }}</dt>
            <dd>
                <a href="{{ url('user_show', {slug: user.slug}) }}" title="{{ 'action.user_canons'|trans }}">
                    {{ 'action.user_canons'|trans }}
                </a>
                <a href="{{ url('user_show', {slug: user.slug}) }}" title="{{ 'action.user_pieces'|trans }}">
                    {{ 'action.user_pieces'|trans }}
                </a>
                <a href="{{ url('user_show', {slug: user.slug}) }}" title="{{ 'action.user_composers'|trans }}">
                    {{ 'action.user_composers'|trans }}
                </a>
                {#                <a href="{{ url('user_edit', {slug: user.slug}) }}" title="{{ 'action.edit'|trans }}">#}
                {#                    {{ 'action.edit'|trans }}#}
                {#                </a>#}
                {#                <a href="{{ url('user_delete', {slug: user.slug}) }}" title="{{ 'action.delete'|trans }}">#}
                {#                    {{ 'action.delete'|trans }}#}
                {#                </a>#}
            </dd>
        </dl>

        {% if pagination is defined and pagination.items|length %}

            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'piece.id') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.piece_name'|trans, 'piece.name') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.piece_year'|trans, 'piece.year') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.piece_description'|trans, 'piece.description') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.piece_link'|trans, 'piece.link') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'piece.createdAt') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'piece.updatedAt') }}</th>
                    <th>{{ 'label.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for piece in pagination %}
                    <tr>
                        <td>{{ piece.id }}</td>
                        <td>{{ piece.name }}</td>
                        <td>{{ piece.year }}</td>
                        <td>{{ piece.description }}</td>
                        <td><a href="{{ piece.link }}">{{ piece.link }}</a></td>
                        <td>{{ piece.createdAt|format_datetime('short', 'short', locale=app.request.locale) }}</td>
                        <td>{{ piece.updatedAt|format_datetime('short', 'short', locale=app.request.locale) }}</td>
                        <td>
                            <a href="{{ url('piece_show', {slug: piece.slug}) }}" title="{{ 'action.view'|trans }}">
                                {{ 'action.view'|trans }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% else %}
            <p>
                {{ 'message.empty_list'|trans }}
            </p>
        {% endif %}

    {% endif %}

{% endblock %}