{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_profile_image'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.user_profile_image'|trans }}</h1>
    {{ form_start(form) }}
    {% if false == form.vars.valid %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'danger',
            message: 'message.form_error'|trans,
        } %}
    {% endif %}

    <div class="form__profile-image">

        {{ form_widget(form) }}
        <div class="form-group row float-sm-right">
            <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary"/>
        </div>
        <div class="form-group row float-sm-left">
            <a href="{{ url('user_show', {slug: app.user.slug}) }}" class="btn btn-link">
                {{ 'action.back_to_profile'|trans }}
            </a>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/imageDisplay.js') }}"></script>
{% endblock %}