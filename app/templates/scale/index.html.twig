{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.scale_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.scale_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'scale.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.scale_name'|trans, 'scale.name') }}</th>
                <th>{{ 'label.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for scale in pagination.items %}
                <tr>
                    <td>{{ scale.id }}</td>
                    <td>{{ scale.name|trans }}</td>
                    <td>
                        <a href="{{ url('scale_show', {slug: scale.slug}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'action.view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>


    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}